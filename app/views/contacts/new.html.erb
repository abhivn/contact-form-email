<h4>Hello</h4>

<%= form_for @contact do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name, required: true %><br>

<%= f.label :email %><br>
<%= f.email_field :email, required: true %><br>

<%= f.label :message %><br>
<%= f.text_area :message, required: true %><br>

<div class="hidden">
  <%= f.label :nickname %><br>
  <%= f.text_field :nickname, hint: 'leave this field blank' %><br>
</div>
<%= f.submit 'Send Message' %>
<% end %>
